#!/bin/bash

set -o nounset -o pipefail -o errexit

LUA_VER=5.4
PYTHON_VER=3

if command -v apt-get > /dev/null; then
    apt-get update -y
    apt-get install -y \
        make wget uuid-runtime jq \
        gcc bison flex \
        "python$PYTHON_VER" "libpython$PYTHON_VER-dev" \
        "lua$LUA_VER" "liblua$LUA_VER-dev"
else
    echo 1>&2 "I don't know how to install dependencies on this system"
    exit 1
fi
