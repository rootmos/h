pkgname=$BUILD_PROJECT
pkgver=$BUILD_GIT_REF
pkgrel=1
arch=("x86_64")
depends=("lua" "python")
makedepends=("make" "gcc" "pkgconf" "bpf")
checkdepends=("jq")
url=$BUILD_REPO_URL
source=("$pkgname-$pkgver.zip::$BUILD_SOURCE_TARBALL_URL")
sha256sums=("$SOURCE_TARBALL_SHA256")

build() {
    make build -C "$pkgname-$pkgver"
}

check() {
    make test -C "$pkgname-$pkgver"
}

package() {
    make install PREFIX="$pkgdir/usr" -C "$pkgname-$pkgver"
}
